@using Microsoft.AspNetCore.Identity
@using AppV1.Areas.Identity.Data

@inject SignInManager<AppV1User> SignInManager
@inject UserManager<AppV1User> UserManager


@if (SignInManager.IsSignedIn(User))
{   
    <div class="navbar-collapse collapse d-flex ">
        <div class="justify-content-start">
            <ul class="navbar-nav">
                <li class="nav-item" style="border-bottom: solid white 2px;margin-left:4px;">
                    <a class="nav-link text-light" asp-area="" asp-controller="Peticions" asp-action="Index">Peticiones</a>
                </li>
                <li class="nav-item" style="border-bottom: solid white 2px; margin-left:4px;">
                    <a class="nav-link text-light" asp-area="" asp-controller="HistorialBusquedas" asp-action="Index">Historial</a>
                </li>
                <li class="nav-item" style="border-bottom: solid white 2px;margin-left:4px;">
                    <a class="nav-link text-light" asp-area="" asp-controller="Buscador" asp-action="Index">Buscador</a>
                </li>
                <li class="nav-item" style="border-bottom: solid white 2px;margin-left:4px;">
                    <a class="nav-link text-light" id="register" asp-area="Identity" asp-page="/Account/Register">Registrar Admin</a>
                </li>
            </ul>
        </div>
    </div>
    <div class="d-flex justify-content-end">
            <ul  class="navbar-nav justify-content-end">
                <li class="nav-item">
                    <a id="manage" class="nav-link text-light" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hola @UserManager.GetUserName(User)!</a>
                </li>
                <li class="nav-item" style="border-bottom: solid white 2px;">
                    <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                        <button id="logout" type="submit" class="nav-link btn btn-link text-light">Cerrar Sesión</button>
                    </form>
                </li>
            </ul>     
        </div>
    
}
else
{   <div class="navbar-collapse collapse d-sm-inline-flex justify-content-end">
        <ul class="navbar-nav d-flex">
            
            <li class="nav-item" style="border-bottom: solid white 2px;margin-left:4px;">
                <a class="nav-link text-light" id="login" asp-area="Identity" asp-page="/Account/Login">Iniciar Sesión</a>
            </li>
        </ul>         
    </div>
    
}

