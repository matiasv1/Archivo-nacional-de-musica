<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AppV1</title>
    <!--<link rel="stylesheet" href="~/css/site.css" />-->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
 
    <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.8.0/gsap.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.8.0/ScrollTrigger.min.js"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.13.0/css/all.min.css" rel="stylesheet"/>
    <link rel="stylesheet" href="~/css/Style.css" />
</head>
<body>
    <header style="color: white;">
        <nav class="fondo bordes navbar navbar-expand-sm navbar-toggleable-sm border-bottom box-shadow">
            <div class="container">
                <a class="navbar-brand text-light" asp-area="" asp-controller="Home" asp-action="Index">Formulario</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <partial name="_LoginPartial.cshtml" />
                
            </div>
        </nav>
    </header>
    <section>
        <main role="main">
            @RenderBody()
        </main>
    </section>

    <footer class="border-top fondo bordes footer text-muted mb-0">
        <div class="container p-3 pb-0" style="display: flex; justify-content:center;">
              <!-- Section: Social media -->
              <section class="mb-4">
                <!-- Facebook -->
                <a
                  class="btn btn-primary btn-floating m-1 icon"
                  style="background-color: #3b5998;"
                  href="https://www.facebook.com/BibliotecaNacionaldeChile"
                  role="button"
                  ><i class="fab fa-facebook-f"></i
                ></a>
          
                <!-- Twitter -->
                <a
                  class="btn btn-primary btn-floating m-1 icon"
                  style="background-color: #55acee;"
                  href="#!"
                  role="button"
                  ><i class="fab fa-twitter"></i
                ></a>
          
                <!-- Google -->
                <a
                  class="btn btn-primary btn-floating m-1 icon"
                  style="background-color: #dd4b39;"
                  href="https://www.bibliotecanacional.gob.cl/sitio/Palabras-Clave/Archivo-de-Musica/"
                  role="button"
                  ><i class="fab fa-google"></i
                ></a>
          
                <!-- Instagram -->
                <a
                  class="btn btn-primary btn-floating m-1 icon"
                  style="background-color: #ac2bac;"
                  href="#!"
                  role="button"
                  ><i class="fab fa-instagram"></i
                ></a>
                <a
                  class="btn btn-primary btn-floating m-1 icon"
                  style="background-color: green;"
                  href="#!"
                  role="button"
                  ><i class="fab fa-whatsapp"></i
                ></a>
                
              </section>
              <!-- Section: Social media -->
        </div>
        <div class="fondo" style="display: flex; justify-content:center;">
            <p style="color: white;">&copy; 2021 - Archivo Nacional de Música
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
